---
import Layout from "../layouts/Layout.astro";
import "../styles/dash.css";
---

<title>Trace Vault | Admin Dashboard</title>
<Layout>
  <div class="sidebar">
    <h2>Trace Vault Admin</h2>
    <a href="#" class="active">Overview</a>
    <a href="#">Reports</a>
    <a href="#">Users</a>
    <a href="#">Feedbacks</a>
    <a href="#">Settings</a>
  </div>
  <div class="main">
    <div class="cards">
      <div class="card">Total Reports: 12</div>
      <div class="card">Flagged Users: 3</div>
      <div class="card">Feedbacks: 5</div>
    </div>
    <div class="reports">
      <h2>Recent Reports</h2>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Type</th>
            <th>Description</th>
            <th>Time</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>john@gmail.com</td>
            <td>Fake Content</td>
            <td>Looks like AI-generated</td>
            <td>Today, 3:45PM</td>
            <td class="action-buttons">
              <button>View</button>
              <button>Delete</button>
            </td>
          </tr>
          <tr>
            <td>precious@gmail.com</td>
            <td>Indecent</td>
            <td>Expose private parts</td>
            <td>Today, 1:22PM</td>
            <td class="action-buttons">
              <button>Warn</button>
              <button>Delete</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</Layout>
