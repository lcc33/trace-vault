---
// Navbar.astro
---

<nav class="navbar">
  <div class="nav-container">
    <!-- Logo/Brand -->
    <div class="nav-brand">
      <a href="/" class="brand-link">
        <span class="brand-text">Trace<span class="brand-accent">Vault</span></span>
      </a>
    </div>
    
    <!-- Navigation Links -->
    <div class="nav-links">
      <a href="/home" class="nav-link" id="nav-home">
        <img src="https://cdn-icons-png.flaticon.com/128/1946/1946488.png" alt="Home" class="nav-icon">
        <span>Home</span>
      </a>
      <a href="/notifications" class="nav-link" id="nav-notifications">
        <img src="https://cdn-icons-png.flaticon.com/128/1827/1827349.png" alt="Notifications" class="nav-icon">
        <span>Notifications</span>
      </a>
      <a href="/profile" class="nav-link" id="nav-profile">
        <img src="https://cdn-icons-png.flaticon.com/128/3135/3135715.png" alt="Profile" id="img" class="nav-icon">
        <span>Profile</span>
      </a>
    </div>
    
    <!-- User Actions -->
    <div class="nav-actions">
      <button id="logoutBtn" class="logout-btn">
        <img src="https://cdn-icons-png.flaticon.com/128/1828/1828490.png" alt="Logout" class="nav-icon">
        <span>Logout</span>
      </button>
    </div>
  </div>
</nav>

<style>
  .navbar {
    background: #1e293b;
    border-bottom: 1px solid #334155;
    padding: 0.75rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .nav-brand .brand-link {
    text-decoration: none;
    color: inherit;
  }
  
  .brand-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #f8fafc;
  }
  .brand-sth {
    color: #facc15;
  }
  .brand-accent {
    color: #38bdf8;
  }
  
  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  
  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    color: #cbd5e1;
    transition: all 0.2s;
    font-weight: 500;
  }
  
  .nav-link:hover {
    color: #38bdf8;
    background: #334155;
  }
  
  .nav-link.active {
    color: #38bdf8;
    background: #334155;
  }
  
  .nav-icon {
    width: 18px;
    height: 18px;
    opacity: 0.8;
  }
  
  .nav-actions {
    display: flex;
    align-items: center;
  }
  
  .logout-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    border: none;
    background: transparent;
    color: #cbd5e1;
    cursor: pointer;
    transition: all 0.2s;
    font-weight: 500;
  }
  
  .logout-btn:hover {
    color: #ef4444;
    background: #334155;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .nav-container {
      padding: 0 0.5rem;
    }
    
    .nav-links {
      gap: 1rem;
    }
    
    .nav-link span,
    .logout-btn span {
      display: none;
    }
    
    .nav-link,
    .logout-btn {
      padding: 0.5rem;
    }
    
    .brand-text {
      font-size: 1.25rem;
    }
  }
  
  @media (max-width: 480px) {
    .nav-links {
      gap: 0.5rem;
    }
  }
  #img {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #ffffff;
  background: #fff;
  display: block;
}
</style>

<script src="./nav.js">

</script>