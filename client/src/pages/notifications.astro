---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { API_URL } from "../config";
---

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: #0f172a;
    color: #e7e9ea;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif;
    line-height: 1.4;
    overflow-x: hidden;
  }
  .notifications-header {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
    padding: 2rem 2rem 1rem 2rem;
    border-bottom: 1px solid #334155;
    background: rgba(30, 41, 59, 0.96);
    position: sticky;
    top: 0;
    z-index: 10;
  }
  .notifications-header h1 {
    font-size: 2rem;
    color: #38bdf8;
    font-weight: 800;
    margin: 0;
    letter-spacing: 1px;
  }
  .notifications-header .notif-icon {
    width: 38px;
    height: 38px;
    background: #38bdf8;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 12px rgba(56, 189, 248, 0.1);
  }
  .notifications-header .notif-icon img {
    width: 24px;
    height: 24px;
    filter: brightness(0) invert(1);
  }

  .notifications {
    max-width: 600px;
    margin: 2rem auto 0 auto;
    padding: 0 1rem 2rem 1rem;
    min-height: 60vh;
  }

  .notification-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .notification-item {
    background: linear-gradient(90deg, #1e293b 80%, #38bdf8 100%);
    border-radius: 16px;
    padding: 1.2rem 1.5rem;
    margin-bottom: 1.2rem;
    box-shadow: 0 2px 16px rgba(56, 189, 248, 0.08);
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    transition: background 0.2s;
    border: 1px solid #334155;
    position: relative;
  }
  .notification-item.unread {
    background: linear-gradient(90deg, #334155 80%, #38bdf8 100%);
  }
  .notification-item .notif-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #facc15;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    flex-shrink: 0;
  }
  .notification-item .notif-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .notification-item .notif-content {
    flex: 1;
  }
  .notification-item .notif-title {
    font-size: 1.1rem;
    color: #f8fafc;
    font-weight: 600;
    margin-bottom: 0.2rem;
  }
  .notification-item .notif-meta {
    font-size: 0.95rem;
    color: #bae6fd;
    margin-bottom: 0.2rem;
  }
  .notification-item .notif-time {
    font-size: 0.85rem;
    color: #94a3b8;
    margin-top: 0.2rem;
  }

  @media (max-width: 700px) {
    .notifications-header {
      padding: 1.2rem 1rem 0.7rem 1rem;
    }
    .notifications {
      margin: 1rem 0 0 0;
      padding: 0 0.2rem 1.5rem 0.2rem;
    }
    .notification-item {
      padding: 1rem 0.7rem;
      border-radius: 12px;
    }
    .notification-item .notif-avatar {
      width: 36px;
      height: 36px;
    }
    .notifications-header h1 {
      font-size: 1.3rem;
    }
  }
</style>

<Layout>
  <Navbar />
  <!-- <div class="notifications-header">
    <span class="notif-icon">
      <img src="https://img.icons8.com/ios-glyphs/30/ffffff/appointment-reminders--v1.png" alt="Notifications"/>
    </span>
    <h1>Notifications</h1>
  </div> -->
  <main class="notifications">
    <ul class="notification-list">
      <!-- Example notification (unread) -->
      <li class="notification-item unread">
        <span class="notif-avatar">
          <img
            src="https://img.icons8.com/ios-filled/50/000000/user-male-circle.png"
            alt="User"
          />
        </span>
        <div class="notif-content">
          <div class="notif-title">Feauture coming soon</div>
        </div>
      </li>
      <!-- Example notification (read) -->
      
      <!-- Add more notifications dynamically as needed -->
    </ul>
  </main>
  <script is:inline>
    import { API_URL } from "../config";
    //protected page
    function protectedPage() {
      fetch(`${API_URL}/api/user`, {
        credentials: "include",
      })
        .then((res) => res.json())
        .then((data) => {
          if (!data.user) {
            location.href = "./";
          }
        });
    }
    protectedPage();
  </script>
</Layout>
